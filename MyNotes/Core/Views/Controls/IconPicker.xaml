<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="MyNotes.Core.Views.IconPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="using:MyNotes.Core.Views"
             Width="370"
             Height="400">

  <UserControl.Resources>
    <views:IconPickerViewItemTemplateSelector x:Key="IconPickerViewItemTemplateSelector">
      <views:IconPickerViewItemTemplateSelector.SymbolItemTemplate>
        <DataTemplate x:DataType="Symbol">
          <Button Click="SymbolButton_Click"
                  DataContext="{x:Bind}"
                  Style="{StaticResource AlternateCloseButtonStyle}"
                  Width="50"
                  Height="50">
            <SymbolIcon Symbol="{x:Bind}" />
          </Button>
        </DataTemplate>
      </views:IconPickerViewItemTemplateSelector.SymbolItemTemplate>

      <views:IconPickerViewItemTemplateSelector.EmojiItemTemplate>
        <DataTemplate x:DataType="x:String">
          <Button Click="EmojiButton_Click"
                  DataContext="{x:Bind}"
                  Style="{StaticResource AlternateCloseButtonStyle}"
                  Width="50"
                  Height="50">
            <ImageIcon Source="{x:Bind}" />
          </Button>
        </DataTemplate>
      </views:IconPickerViewItemTemplateSelector.EmojiItemTemplate>
    </views:IconPickerViewItemTemplateSelector>
  </UserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <SelectorBar x:Name="VIEW_PrimarySelectorBar"
                 Grid.Row="0"
                 SelectionChanged="VIEW_PrimarySelectorBar_SelectionChanged">
      <SelectorBarItem Tag="Symbol">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xED58;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>

      <SelectorBarItem Tag="SmileysAndEmotion">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xE76E;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>

      <SelectorBarItem Tag="PeopleAndBody">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xE716;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>

      <SelectorBarItem Tag="AnimalsAndNature">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xEC0A;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>

      <SelectorBarItem Tag="FoodAndDrink">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xED56;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>

      <SelectorBarItem Tag="TravelAndPlaces">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xE909;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>

      <SelectorBarItem Tag="ActivitiesAndObjects">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xED55;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>

      <SelectorBarItem Tag="SymbolsAndFlags">
        <SelectorBarItem.Icon>
          <FontIcon Glyph="&#xE7C1;" />
        </SelectorBarItem.Icon>
      </SelectorBarItem>
    </SelectorBar>

    <SelectorBar x:Name="VIEW_SecondarySelectorBar"
                 Grid.Row="1"
                 SelectionChanged="VIEW_SecondarySelectorBar_SelectionChanged">
      <SelectorBarItem Tag="General">
        <Ellipse Fill="#ffc83d"
                 Width="20"
                 Height="20"
                 Margin="12,4" />
      </SelectorBarItem>
      <SelectorBarItem Tag="Light">
        <Ellipse Fill="#f5d7c5"
                 Width="20"
                 Height="20"
                 Margin="12,4" />
      </SelectorBarItem>
      <SelectorBarItem Tag="MediumLight">
        <Ellipse Fill="#e3c0b0"
                 Width="20"
                 Height="20"
                 Margin="12,4" />
      </SelectorBarItem>
      <SelectorBarItem Tag="Medium">
        <Ellipse Fill="#bc9384"
                 Width="20"
                 Height="20"
                 Margin="12,4" />
      </SelectorBarItem>
      <SelectorBarItem Tag="MediumDark">
        <Ellipse Fill="#916c68"
                 Width="20"
                 Height="20"
                 Margin="12,4" />
      </SelectorBarItem>
      <SelectorBarItem Tag="Dark">
        <Ellipse Fill="#533a3d"
                 Width="20"
                 Height="20"
                 Margin="12,4" />
      </SelectorBarItem>
    </SelectorBar>

    <ScrollViewer Grid.Row="2">
      <ItemsRepeater x:Name="VIEW_IconItemsRepeater"
                     ItemTemplate="{StaticResource IconPickerViewItemTemplateSelector}">
        <ItemsRepeater.Layout>
          <UniformGridLayout />
        </ItemsRepeater.Layout>
      </ItemsRepeater>
    </ScrollViewer>
  </Grid>
</UserControl>
