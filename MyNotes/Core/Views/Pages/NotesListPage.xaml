<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="MyNotes.Core.Views.NotesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal"
                Spacing="8">
      <Button Style="{StaticResource AlternateCloseButtonStyle}"
              Width="40"
              Height="40">
        <IconSourceElement IconSource="{x:Bind Navigation.Icon, Mode=OneWay}" />
      </Button>
      <TextBlock Text="{x:Bind Navigation.Name, Mode=OneWay}"
                 Style="{StaticResource TitleTextBlockStyle}" />
    </StackPanel>

    <ScrollViewer Grid.Row="1">

    </ScrollViewer>
  </Grid>
</Page>
