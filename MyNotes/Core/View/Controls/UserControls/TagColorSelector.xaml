<?xml version="1.0" encoding="utf-8"?>
<Button x:Class="MyNotes.Core.View.TagColorSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="using:MyNotes.Core.Model"
        xmlns:h="using:MyNotes.Common.Helpers"
        Style="{StaticResource AppIconNormalButtonStyle}">

  <Button.Resources>
    <Style x:Key="EllipseStyle"
           TargetType="Ellipse">
      <Setter Property="Width"
              Value="20" />
      <Setter Property="Height"
              Value="20" />
      <Setter Property="StrokeThickness"
              Value="3" />
    </Style>
  </Button.Resources>

  <Ellipse ToolTipService.ToolTip="{x:Bind TagColor, Mode=OneWay}"
           Fill="{x:Bind h:Converter.GetTagBackgroundBrush(TagColor), Mode=OneWay}"
           Stroke="{x:Bind h:Converter.GetTagForegroundBrush(TagColor), Mode=OneWay}"
           Style="{StaticResource EllipseStyle}" />

  <Button.Flyout>
    <Flyout Placement="BottomEdgeAlignedLeft"
            ShouldConstrainToRootBounds="False">
      <GridView Header="Tag color"
                HeaderTemplate="{StaticResource AppBoldTextHeaderTemplate}"
                SelectionMode="Single"
                SelectedIndex="0"
                ItemsSource="{x:Bind Colors}"
                SelectionChanged="GridView_SelectionChanged">

        <GridView.ItemTemplate>
          <DataTemplate x:DataType="model:TagColor">
            <Ellipse ToolTipService.ToolTip="{x:Bind}"
                     Fill="{x:Bind h:Converter.GetTagBackgroundBrush((model:TagColor))}"
                     Stroke="{x:Bind h:Converter.GetTagForegroundBrush((model:TagColor))}"
                     Style="{StaticResource EllipseStyle}" />
          </DataTemplate>
        </GridView.ItemTemplate>

        <GridView.ItemContainerStyle>
          <Style TargetType="GridViewItem"
                 BasedOn="{StaticResource DefaultGridViewItemStyle}">
            <Setter Property="Margin"
                    Value="4" />
          </Style>
        </GridView.ItemContainerStyle>

        <GridView.ItemsPanel>
          <ItemsPanelTemplate>
            <ItemsWrapGrid MaximumRowsOrColumns="3"
                           Orientation="Horizontal"
                           Margin="0,8,0,0" />
          </ItemsPanelTemplate>
        </GridView.ItemsPanel>
      </GridView>
    </Flyout>
  </Button.Flyout>
</Button>
