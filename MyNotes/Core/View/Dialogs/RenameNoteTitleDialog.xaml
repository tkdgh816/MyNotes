<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="MyNotes.Core.View.RenameNoteTitleDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:h="using:MyNotes.Common.Helpers"
               Title="{x:Bind h:Converter.WrapStringWith(ViewModel.Note.Title, 'Rename: ', '.')}"
               PrimaryButtonText="OK"
               IsPrimaryButtonEnabled="{x:Bind h:Converter.IsValidString(View_RenameNoteTitleInputTextBox.Text), Mode=OneWay}"
               PrimaryButtonCommand="{x:Bind ViewModel.RenameNoteTitleCommand}"
               PrimaryButtonCommandParameter="{x:Bind View_RenameNoteTitleInputTextBox.Text}"
               CloseButtonText="Cancel"
               DefaultButton="Primary"
               Style="{StaticResource DefaultContentDialogStyle}">
  <Grid ColumnSpacing="8">
    <TextBox x:Name="View_RenameNoteTitleInputTextBox"
             Grid.Column="1"
             VerticalAlignment="Center"
             PlaceholderText="Enter name" />
  </Grid>
</ContentDialog>
