<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="MyNotes.Core.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal"
                Spacing="8">
      <TextBlock Text="Home"
                 Style="{StaticResource TitleTextBlockStyle}" />
    </StackPanel>

    <Grid Grid.Row="1"
          RowSpacing="12"
          Padding="8">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      
      <StackPanel Spacing="6"
                  Background="{StaticResource SubtleFillColorSecondary}"
                  CornerRadius="{StaticResource ControlCornerRadius}"
                  Padding="12">
        <StackPanel Orientation="Horizontal"
                    Spacing="12">
          <Border Background="{x:Bind BackdropColorPicker.Color, Converter={StaticResource ColorToBrushConverter}, Mode=OneWay}"
                  Width="80"
                  Height="80">
            <Border Background="{x:Bind BackgroundColorPicker.Color, Converter={StaticResource ColorToBrushConverter}, Mode=OneWay}"
                    Margin="5">
              <TextBlock Text="Text"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Foreground="{x:Bind ForegroundColorPicker.Color, Converter={StaticResource ColorToBrushConverter}, Mode=OneWay}" />
            </Border>
          </Border>
          <Grid ColumnSpacing="12">
            <Grid.RowDefinitions>
              <RowDefinition />
              <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition />
              <ColumnDefinition />
              <ColumnDefinition />
              <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       TextAlignment="Center"
                       Text="Contrast" />
            <TextBlock x:Name="ContrastTestTextBlock"
                       Grid.Row="1"
                       Grid.Column="0"
                       TextAlignment="Center" />
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       TextAlignment="Center"
                       Text="Regular(4.5:1)" />
            <TextBlock x:Name="RegularTestTextBlock"
                       Grid.Row="1"
                       Grid.Column="1"
                       TextAlignment="Center" />
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       TextAlignment="Center"
                       Text="Large(3:1)" />
            <TextBlock x:Name="LargeTestTextBlock"
                       Grid.Row="1"
                       Grid.Column="2"
                       TextAlignment="Center" />
            <TextBlock Grid.Row="0"
                       Grid.Column="3"
                       TextAlignment="Center"
                       Text="Luminance(Backdrop)" />
            <TextBlock x:Name="LuminanceTestTextBlock"
                       Grid.Row="1"
                       Grid.Column="3"
                       TextAlignment="Center" />
          </Grid>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Spacing="6">
          <Button Content="Backdrop">
            <Button.Flyout>
              <Flyout Placement="Bottom">
                <ColorPicker x:Name="BackdropColorPicker"
                             IsAlphaEnabled="True"
                             ColorChanged="ColorPicker_ColorChanged" />
              </Flyout>
            </Button.Flyout>
          </Button>
          <Button Content="Background">
            <Button.Flyout>
              <Flyout Placement="Bottom">
                <ColorPicker x:Name="BackgroundColorPicker"
                             IsAlphaEnabled="True"
                             ColorChanged="ColorPicker_ColorChanged" />
              </Flyout>
            </Button.Flyout>
          </Button>
          <Button Content="Foreground">
            <Button.Flyout>
              <Flyout Placement="Bottom">
                <ColorPicker x:Name="ForegroundColorPicker"
                             IsAlphaEnabled="True"
                             ColorChanged="ColorPicker_ColorChanged" />
              </Flyout>
            </Button.Flyout>
          </Button>
        </StackPanel>
      </StackPanel>
    </Grid>
  </Grid>
</Page>
