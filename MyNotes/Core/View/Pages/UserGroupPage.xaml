<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="MyNotes.Core.View.UserGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:view="using:MyNotes.Core.View">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!--#region Icon -->
      <Button Style="{StaticResource AppIconMediumButtonStyle}"
              Margin="0,0,8,0">
        <IconSourceElement IconSource="{x:Bind Navigation.Icon, Converter={StaticResource IconToIconSourceConverter}, Mode=OneWay}" />
        <Button.Flyout>
          <Flyout Placement="BottomEdgeAlignedLeft">
            <view:IconPicker x:Name="View_IconPicker"
                              Icon="{x:Bind Navigation.Icon, Mode=TwoWay}" />
          </Flyout>
        </Button.Flyout>
      </Button>
      <!--#endregion-->

      <!--#region Title -->
      <TextBlock Grid.Column="1"
                 Text="{x:Bind Navigation.Name, Mode=OneWay}"
                 Style="{StaticResource TitleTextBlockStyle}"
                 TextWrapping="NoWrap"
                 Margin="0,0,8,0" />
      <!--#endregion -->
      
      <!--#region CommandBar -->
      <Button Grid.Column="2"
              Style="{StaticResource AppFontIconMediumButtonStyle}"
              Content="&#xE712;" />
      <!--#endregion-->
    </Grid>

    <ScrollView Grid.Row="1">

    </ScrollView>
  </Grid>
</Page>
