                  <VisualState.Setters>
                    <Setter Target="NavigationViewItemPresenter.Style"
                            Value="{StaticResource MUX_NavigationViewItemPresenterStyleWhenOnTopPaneOverflow}" />

                  </VisualState.Setters>
                </VisualState>

              </VisualStateGroup>

              <VisualStateGroup x:Name="HoverOverlayStates">
                <VisualState x:Name="HoverOverlayVisible">
                  <VisualState.Setters>
                    <Setter Target="HoverOverlayBorder.Visibility"
                            Value="Visible" />
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="HoverOverlayCollapsed" />
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
