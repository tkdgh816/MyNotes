<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="MyNotes.Core.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:cv="using:MyNotes.Common.Converters">

  <Grid x:Name="View_RootGrid">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <!--#region Navigation Header -->
    <Grid x:Name="View_HeaderGrid"
          Margin="0,0,4,0"
          Padding="4"
          CornerRadius="{StaticResource ControlCornerRadius}"
          Canvas.ZIndex="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!--#region Title -->
      <TextBlock Grid.Column="0"
                 Text="Home"
                 Style="{StaticResource TitleTextBlockStyle}"
                 Margin="4,0" />

      <!--#endregion -->

      <StackPanel Grid.Column="1"
                  Orientation="Horizontal">
        <!--#region More Button -->
        <Button x:Name="View_MoreButton"
                Style="{StaticResource AppFontIconMediumButtonStyle}"
                Content="&#xE712;" />
        <!--#endregion-->
      </StackPanel>
    </Grid>
    <!--#endregion-->

    <StackPanel Grid.Row="1"
                Padding="8"
                Spacing="12">
      <Expander Header="WCAG Test"
                HorizontalAlignment="Stretch">
        <Grid RowSpacing="12">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
          </Grid.RowDefinitions>

          <StackPanel Spacing="6"
                      Background="{StaticResource SubtleFillColorSecondary}"
                      CornerRadius="{StaticResource ControlCornerRadius}"
                      Padding="12">
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
              <Border Background="{x:Bind cv:Converter.ToBrush(Ex1_BackdropColorPicker.Color), Mode=OneWay}"
                      Width="80"
                      Height="80">
                <Border Background="{x:Bind cv:Converter.ToBrush(Ex1_BackgroundColorPicker.Color), Mode=OneWay}"
                        Margin="5">
                  <TextBlock Text="Text"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Foreground="{x:Bind cv:Converter.ToBrush(Ex1_ForegroundColorPicker.Color), Mode=OneWay}" />
                </Border>
              </Border>
              <Grid ColumnSpacing="12">
                <Grid.RowDefinitions>
                  <RowDefinition />
                  <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition />
                  <ColumnDefinition />
                  <ColumnDefinition />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           TextAlignment="Center"
                           Text="Contrast" />
                <TextBlock x:Name="Ex1_ContrastTestTextBlock"
                           Grid.Row="1"
                           Grid.Column="0"
                           TextAlignment="Center" />
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           TextAlignment="Center"
                           Text="Regular(4.5:1)" />
                <TextBlock x:Name="Ex1_RegularTestTextBlock"
                           Grid.Row="1"
                           Grid.Column="1"
                           TextAlignment="Center" />
                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           TextAlignment="Center"
                           Text="Large(3:1)" />
                <TextBlock x:Name="Ex1_LargeTestTextBlock"
                           Grid.Row="1"
                           Grid.Column="2"
                           TextAlignment="Center" />
                <TextBlock Grid.Row="0"
                           Grid.Column="3"
                           TextAlignment="Center"
                           Text="Luminance(Backdrop)" />
                <TextBlock x:Name="Ex1_LuminanceTestTextBlock"
                           Grid.Row="1"
                           Grid.Column="3"
                           TextAlignment="Center" />
              </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Spacing="6">
              <Button Content="Backdrop">
                <Button.Flyout>
                  <Flyout Placement="Bottom">
                    <ColorPicker x:Name="Ex1_BackdropColorPicker"
                                 IsAlphaEnabled="True"
                                 ColorChanged="Ex1_ColorPicker_ColorChanged" />
                  </Flyout>
                </Button.Flyout>
              </Button>
              <Button Content="Background">
                <Button.Flyout>
                  <Flyout Placement="Bottom">
                    <ColorPicker x:Name="Ex1_BackgroundColorPicker"
                                 IsAlphaEnabled="True"
                                 ColorChanged="Ex1_ColorPicker_ColorChanged" />
                  </Flyout>
                </Button.Flyout>
              </Button>
              <Button Content="Foreground">
                <Button.Flyout>
                  <Flyout Placement="Bottom">
                    <ColorPicker x:Name="Ex1_ForegroundColorPicker"
                                 IsAlphaEnabled="True"
                                 ColorChanged="Ex1_ColorPicker_ColorChanged" />
                  </Flyout>
                </Button.Flyout>
              </Button>
            </StackPanel>
          </StackPanel>
        </Grid>

      </Expander>

      <Expander Header="Emphasis Color Test"
                HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal"
                    Spacing="24">
          <TextBlock x:Name="Ex2_TextBlock" />

          <Border Width="100"
                  Height="100"
                  Background="{x:Bind cv:Converter.ToBrush(Ex2_BackgroundColorPicker.Color), Mode=OneWay}">
            <Border x:Name="Ex2_EmphasisBorder"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="8">
              <TextBlock Text="Text"
                         Foreground="{x:Bind cv:Converter.ToBrush(Ex2_ForegroundColorPicker.Color), Mode=OneWay}" />
            </Border>
          </Border>

          <StackPanel Spacing="4">
            <Button Content="Background">
              <Button.Flyout>
                <Flyout Placement="RightEdgeAlignedTop">
                  <ColorPicker x:Name="Ex2_BackgroundColorPicker"
                               IsAlphaEnabled="True"
                               ColorChanged="Ex2_ColorPicker_ColorChanged" />
                </Flyout>
              </Button.Flyout>
            </Button>
            <Button Content="Emphasis">
              <Button.Flyout>
                <Flyout Placement="RightEdgeAlignedTop">
                  <ColorPicker x:Name="Ex2_EmphasisColorPicker"
                               IsAlphaEnabled="True"
                               ColorChanged="Ex2_EmphasisColorPicker_ColorChanged" />
                </Flyout>
              </Button.Flyout>
            </Button>
            <Button Content="Foreground">
              <Button.Flyout>
                <Flyout Placement="RightEdgeAlignedTop">
                  <ColorPicker x:Name="Ex2_ForegroundColorPicker"
                               IsAlphaEnabled="True"
                               ColorChanged="Ex2_ColorPicker_ColorChanged" />
                </Flyout>
              </Button.Flyout>
            </Button>
          </StackPanel>
        </StackPanel>
      </Expander>
    </StackPanel>

  </Grid>
</Page>
